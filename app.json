{
  "expo": {
    "name": "app-that-makes-slack-notification-sound",
    "slug": "app-that-makes-slack-notification-sound",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "UIBackgroundModes": [
          "audio",
          "fetch",
          "processing"
        ]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "RECEIVE_BOOT_COMPLETED",
        "VIBRATE",
        "POST_NOTIFICATIONS",
        "SCHEDULE_EXACT_ALARM",
        "USE_EXACT_ALARM",
        "REQUEST_IGNORE_BATTERY_OPTIMIZATIONS"
      ],
      "package": "com.anonymous.appthatmakesslacknotificationsound",
      "googleServicesFile": null
    },
    "plugins": [
      [
        "expo-notifications",
        {
          "icon": "./assets/icon.png",
          "color": "#4A154B",
          "sounds": [
            "./assets/slack_notification.mp3"
          ]
        }
      ],
      [
        "expo-task-manager",
        {
          "backgroundMode": [
            "audio",
            "location",
            "fetch"
          ]
        }
      ]
    ],
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}
